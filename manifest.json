{
    "manifest_version": 3,
    "name": "Clear Site Data",
    "description": "Extension to Clear Local Storage, Session Storage & Cookies for the Current Site.",
    "permissions": [
        "activeTab",
        "storage",
        "cookies",
        "scripting"
      ],
      "background": {
        "service_worker": "background.js"
      },
    "version": "1.0",
    "action": {
        "default_icon": {
            "16": "images/icon48.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons":{
        "16": "images/icon48.png",
        "48": "images/icon48.png",
        "128": "images/icon48.png"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ]
  }